@model List<ConcludeCareViewModel>
@{
    var requestId = ViewBag.Requestid;
    var isFinalize = ViewBag.IsFinalize.ToString().ToLower();
}
<script>
    function deleteFile(filename, requestid) {
        var dataToSend = {
            filename: filename,
            requestid: requestid
        };
        $.ajax({
            type: "POST",
            url: "/Provider/DeleteFile",
            data: dataToSend,
            success: function (response) {
                if (response.success) {
                    $('#home').load('/Provider/ConcludeCarePartial?requestId=' + requestid);
                }
                else {
                    alert(response.message);
                    $('#home').load('/Provider/ConcludeCarePartial?requestId=' + requestid);
                }
            },
            error: function (response) {
                alert("Error deleting file");
            }
        });
    }
    function backToDashboard() {
        $('#home').load('/Provider/ProviderDashboardPartial');
    }
    $('#uploadFile').change(function () {
        var formData = new FormData();
        formData.append('Requestid', @requestId);
        formData.append('document', $('#uploadFile')[0].files[0]);

        $.ajax({
            url: '/Provider/UploadDocument',
            type: 'POST',
            data: formData,
            processData: false,
            contentType: false,
            success: function (result) {
                $('#home').load('/Provider/ConcludeCarePartial?requestId=' + @requestId);
            }
        });
    });
    $(document).on('click', '#concludeRequest', function () {
        if (@isFinalize) {
            var providerNotes = $('#providerNote').val();
            $.ajax({
                url: '/Provider/ConcludeRequest',
                type: 'POST',
                data: {
                    Requestid: @requestId ,
                    providerNotes: providerNotes
                },
                success: function (result) {
                    backToDashboard();
                },
            });
        }
        else {
            alert("Finalize Encounter Form first");
        }
    });
</script>
<div class="row justify-content-center">
    <div class="col-10 d-inline-flex justify-content-between">
        <div class="d-flex">
            <h4 class="h4 mt-5 mb-3">Conclude Care</h4>
        </div>
        <div class="d-flex">
            <button class="btn btn-outline-info mt-5 mb-3 ms-auto " onclick="backToDashboard()">
                <svg xmlns="http://www.w3.org/2000/svg" width="16"
                     height="16" fill="currentColor" class="bi bi-chevron-left fw-medium mb-1" viewBox="0 0 16 16">
                    <path fill-rule="evenodd"
                          d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0" />
                </svg>Back
            </button>
        </div>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-10 rounded mb-3" style="box-shadow: 2px 2px 20px rgb(179, 177, 177);">
        <div class="row">
            <small class="mt-3">Patient Name</small>
            <div><span class="text-info fs-5 my-2">@ViewBag.PatientName</span></div>
        </div>
        <div class="row my-3">
            <div class="col d-inline-flex justify-content-between">
                <div class="d-flex">
                    <h4 class="h4">Encounter Forms</h4>
                </div>
                <div class="d-flex">
                    <div class="file btn border border-info position-relative overflow-hidden">
                        <i class="bi bi-cloud-arrow-up pe-1 text-info"></i>
                        <span class="text-info">Upload</span>
                        <input type="file" id="uploadFile" class="position-absolute opacity-0 start-0 end-0" />
                    </div>
                </div>
            </div>
        </div>
        <div class="row table-responsive">
            <table class="table">
                <tbody>
                    <tr class="tableHead">
                        <th scope="col">Documents</th>
                        <th scope="col">Actions</th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.File.FileName.Substring(item.File.FileName.IndexOf('_') + 1)</td>
                            <td>
                                <a class="btn btn-outline-info mb-2" id="downloadLink" href="/uploads/@item.File.FileName" download>
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="#10bce9" class="bi bi-file-earmark-arrow-down" viewBox="0 0 16 16">
                                        <path d="M8.5 6.5a.5.5 0 0 0-1 0v3.793L6.354 9.146a.5.5 0 1 0-.708.708l2 2a.5.5 0 0 0 .708 0l2-2a.5.5 0 0 0-.708-.708L8.5 10.293z" />
                                        <path d="M14 14V4.5L9.5 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2M9.5 3A1.5 1.5 0 0 0 11 4.5h2V14a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h5.5z" />
                                    </svg>
                                </a>
                                <button class="btn btn-outline-info mb-2" onclick="deleteFile('@item.File.FileName','@item.RequestID')">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
                                        <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5M11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47M8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5" />
                                    </svg>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="row">
            <h6 class="h6">Provider Notes</h6>
        </div>
        <div class="row">
            <div class="form-floating">
                <textarea class="form-control" id="providerNote" placeholder="Provider Note" style="height:9rem"></textarea>
                <label for="providerNote" class="floatingLabel text-muted">Provider Note</label>
            </div>
        </div>
        <div class="d-block text-end">
            <button type="button" class="btn btn-info text-light my-2 concludeCare" id="concludeRequest">Conclude Care</button>
        </div>
    </div>
</div>
